{
  "homepage": "https://pruvious.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pruvious/pruvious.git"
  },
  "author": "Muris Ceman <hello@pruvious.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @pruvious/utils build && pnpm --filter @pruvious/i18n build && pnpm --filter @pruvious/orm build && pnpm --filter @pruvious/storage build",
    "build:i18n": "pnpm --filter @pruvious/i18n build",
    "build:orm": "pnpm --filter @pruvious/orm build",
    "build:storage": "pnpm --filter @pruvious/storage build",
    "build:utils": "pnpm --filter @pruvious/utils build",
    "dev": "node scripts/clean.mjs && pnpm --filter pruvious dev",
    "dev:ui": "node scripts/clean.mjs && pnpm --filter @pruvious/ui dev",
    "format": "prettier --write .",
    "play": "node scripts/play.mjs",
    "postinstall": "pnpm build",
    "test": "vitest",
    "test:orm": "vitest packages/orm",
    "test:utils": "vitest packages/utils",
    "typecheck": "pnpm --filter @pruvious/utils typecheck && pnpm --filter @pruvious/i18n typecheck && pnpm --filter @pruvious/orm typecheck && pnpm --filter @pruvious/storage typecheck && pnpm --filter @pruvious/ui typecheck && pnpm --filter pruvious typecheck",
    "bump": "node scripts/bump.mjs"
  },
  "devDependencies": {
    "@nuxt/test-utils": "3.17.2",
    "consola": "3.4.2",
    "dotenv": "16.4.7",
    "execa": "9.5.2",
    "ofetch": "1.4.1",
    "pkg-pr-new": "0.0.42",
    "prettier": "3.5.3",
    "prettier-plugin-organize-attributes": "1.0.0",
    "typescript": "5.8.2",
    "vitest": "3.1.1"
  },
  "packageManager": "pnpm@9.7.0",
  "private": true
}
