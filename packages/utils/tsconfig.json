{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
